{
	"name": "confusables",
	"version": "1.0.0",
	"license": "MIT",
	"description": "A library to interact with Unicode Confusables in strings.",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/gc/confusables.git"
	},
	"bugs": {
		"url": "https://github.com/gc/confusables/issues"
	},
	"homepage": "https://github.com/gc/confusables",
	"main": "dist/index.js",
	"module": "dist/index.es.js",
	"unpkg": "dist/index.umd.js",
	"typings": "dist/index.d.ts",
	"scripts": {
		"lint": "eslint src test scripts --ext ts --fix",
		"test": "jest",
		"style": "yarn pretty-quick",
		"build": "rollup -c rollup.config.ts",
		"watch": "yarn build -w",
		"prepublishOnly": "yarn build",
		"scripts:runner": "ts-node -P ./tsconfig.eslint.json",
		"scripts:generate": "yarn scripts:runner scripts/generate"
	},
	"devDependencies": {
		"@favware/eslint-config": "3.2.0",
		"@favware/ts-config": "^1.1.2",
		"@rollup/plugin-commonjs": "^11.0.1",
		"@rollup/plugin-node-resolve": "^7.0.0",
		"@types/jest": "^24.9.0",
		"@types/node": "^13.1.8",
		"@types/node-fetch": "^2.5.7",
		"@types/rollup-plugin-progress": "^1.1.0",
		"@typescript-eslint/eslint-plugin": "^2.17.0",
		"@typescript-eslint/parser": "^2.17.0",
		"array-flat-polyfill": "^1.0.1",
		"eslint": "^6.8.0",
		"husky": "^4.2.0",
		"jest": "^24.9.0",
		"node-fetch": "^2.6.1",
		"prettier": "^1.19.1",
		"pretty-quick": "^2.0.1",
		"rollup": "^1.29.1",
		"rollup-plugin-progress": "^1.1.1",
		"rollup-plugin-terser": "^5.2.0",
		"rollup-plugin-typescript2": "^0.25.3",
		"ts-jest": "^24.3.0",
		"ts-node": "^8.6.2",
		"typescript": "^3.7.5"
	},
	"files": [
		"dist"
	],
	"engines": {
		"node": ">=10",
		"npm": ">=6"
	},
	"husky": {
		"hooks": {
			"pre-commit": "pretty-quick --staged"
		}
	}
}
